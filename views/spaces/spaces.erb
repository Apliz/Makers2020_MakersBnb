<div class=spaces-page>
<div class='spaces'>
<% if @user %>
<h1>Welcome, <%=@user.name%>!</h1>
<% end %>
<div>
 <div style="display: flex;"> 
   <form action="/spaces/new">
    <input type="submit" value="Add Space" class='button'/>
    </form>
   <form action="/sessions/destroy" method="post">
<input type="submit" value="Log Out" class='button'/>
</form>
</div>
<ol>
<% @spaces.each do |space| %>
  <li class='form space'>
  <ul>
  <li class='item'>
  
  <div class='row'>
  <div class='col'>
  <%= space.name %><br>
  <%= space.description %><br>
  </div>
  <div class='col'>
  £<%= space.price %> per night<br>
  Available from<br>
  <%= space.date_from %><br>
  until
    <%= space.date_to %>
    </div>
    </div>
    
    </li>
     <form action="/to_calendar" method="post">
        <input type="hidden" name="space_id" value="<%= space.id %>"/>
        <input type="submit" name="Book" value="Book"/>
     </form>
    </ul>
    </li><br>
    <% end %>
    </ol>
